{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["bun-types"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"],
      "@demos/*": ["exercises/ai_demos/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
